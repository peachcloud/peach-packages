#!/usr/bin/make -f

prefix ?= /usr
DEBUG ?= 0
TARGET = debug

ifeq (0,$(DEBUG))
        ARGS += --release
        TARGET = release
endif

BINARY=target/$(TARGET)/$(PACKAGE)

all: $(BINARY)

clean:
	cargo clean

distclean: clean
	rm -rf .cargo vendor

install:
	install -Dm0755 $(BINARY) $(DESTDIR)$(prefix)/bin/$(PACKAGE)

$(BINARY): Cargo.lock Cargo.toml src/main.rs
	cargo build $(ARGS)
